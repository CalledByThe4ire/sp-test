{% macro orderDiscount(props) %}
	<article class="order-discount {{ props.cls }}">
		<div class="order-discount__container">
			<h2 class="order-discount__heading">Promo&nbsp;code</h2>
			<form class="order-discount__form" action="">
				<input
				class="order-discount__input"
				type="text"
				name="discount"
				placeholder="Placeholder Text"
			/>
				<input class="order-discount__button" type="submit" value="Apply"/>
			</form>
		</div>
	</article>
{% endmacro %}
